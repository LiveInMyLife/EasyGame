<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
	<RelativeLayout 
	            android:id="@+id/layout_content"
	            android:layout_width="match_parent"
	            android:layout_height="44dp"
	            android:background="@drawable/bg_std_item_selector">
	
	    <ImageView
	            android:id="@+id/item_game_logo"
	            android:layout_width="40dp"
	            android:layout_height="40dp"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="@dimen/custom_margin_mini"
	            android:src="@drawable/lol"/>
	
	    <TextView
	            android:id="@+id/item_game_name"
	            android:layout_width="match_parent"
	            android:layout_height="44dp"
	            android:layout_marginLeft="@dimen/custom_margin_very_mini"
	            android:layout_toRightOf="@id/item_game_logo"
	            android:gravity="center_vertical"
	            android:includeFontPadding="false"
	            android:text="英雄联盟"
	            android:textColor="@color/color_std_black"
	            android:textSize="@dimen/custom_text_size_very_small"/>
	
	    <View
	            android:layout_width="match_parent"
	            android:layout_height="1px"
	            android:layout_alignLeft="@id/item_game_name"
	            android:layout_alignParentBottom="true"
	            android:layout_marginRight="@dimen/custom_margin_mini"
	            android:background="@color/div_line_color"/>
	
	</RelativeLayout>
</RelativeLayout>
