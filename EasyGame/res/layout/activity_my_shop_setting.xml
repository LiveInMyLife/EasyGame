<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"      
    android:background="@color/commen_gray_bg"
    android:orientation="vertical" >
    <include
        android:id="@+id/layout_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_actionbar" />
	<ScrollView 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
	    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"      
		    android:orientation="vertical" >
		    <RelativeLayout
		        android:id="@+id/layout_content"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="@color/color_std_white"
		        android:padding="@dimen/custom_margin_tiny" >
		
		        <ImageView
		            android:id="@+id/my_shop_img"
		            android:layout_width="@dimen/item_img_weight"
		            android:layout_height="@dimen/item_img_height"
		            android:src="@drawable/lol" />
		
		        <RelativeLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_toRightOf="@id/my_shop_img" >
		
		            <TextView
		                android:id="@+id/my_shop_gamename"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginLeft="@dimen/custom_margin_tiny"
		                android:paddingTop="8dp"
		                android:paddingBottom="8dp"
		                android:singleLine="true"
		                android:text="选择游戏"
		                android:textSize="@dimen/custom_text_size_medium" />
		
		            <EditText
		                android:id="@+id/my_shop_gameserver"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:paddingTop="8dp"
		                android:paddingBottom="8dp"
		                android:layout_marginLeft="@dimen/custom_margin_tiny"
		                android:layout_marginRight="@dimen/custom_margin_tiny"
		                android:layout_toRightOf="@id/my_shop_gamename"
		                android:layout_alignBottom="@id/my_shop_gamename"
		                android:gravity="right"
		                android:background="@null"
		                android:singleLine="true"
		                android:hint="请输入游戏区服"
		                android:textColor="@color/color_call_black"
		                android:textSize="@dimen/custom_text_size_medium" />
		            
		            <EditText
		                android:id="@+id/my_shop_shopname"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:paddingTop="8dp"
		                android:paddingBottom="8dp"
		                android:layout_alignLeft="@id/my_shop_gamename"
		                android:layout_below="@id/my_shop_gamename"
		                android:background="@null"
		                android:singleLine="true"
		                android:hint="请输入店名"
		                android:textColor="@color/color_call_black"
		                android:textSize="@dimen/custom_text_size_medium" />
		
		            <RelativeLayout
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:layout_alignLeft="@id/my_shop_gamename"
		                android:layout_below="@id/my_shop_shopname"
		                android:paddingTop="8dp"
		                android:paddingBottom="8dp" >
		
		                <ImageView
		                    android:id="@+id/my_shop_notice_iv"
		                    android:layout_width="15dp"
		                    android:layout_height="15dp"
		                    android:background="@drawable/shop_detail_notice" />
		
		                <EditText
		                    android:id="@+id/my_shop_notice_tv"
		                    android:layout_width="match_parent"
		                    android:layout_height="wrap_content"
		                    android:layout_marginLeft="2dp"
		                    android:layout_toRightOf="@id/my_shop_notice_iv"
		                    android:background="@null"
		                    android:ellipsize="end"
		                    android:hint="请输入店铺简介"
		                    android:textColor="@color/color_call_black"
		                    android:textSize="@dimen/custom_text_size_mini" />
		            </RelativeLayout>
		        </RelativeLayout>
		    </RelativeLayout>
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dp"
		        android:orientation="vertical"
		        android:background="@color/color_std_white">
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="照片或截图"
		            android:layout_marginLeft="10dp"
		            android:layout_marginTop="10dp"
		            android:textColor="@color/color_call_black"
		            android:textSize="14sp"/>
		        <View
			        android:layout_width="match_parent"
			        android:layout_height="1px"
			        android:layout_marginTop="5dp"
			        android:layout_marginBottom="5dp"
			        android:background="@color/div_line_color" />
			    <LinearLayout 
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginBottom="10dp"
			        android:orientation="horizontal">
			        <LinearLayout
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_weight="1"
			            android:gravity="center_horizontal"
			             >
				        <ImageView 
				            android:layout_width="60dp"
				            android:layout_height="80dp"
				            android:layout_gravity="center_vertical"
				            android:src="@drawable/add_btn_green"/>
			        </LinearLayout>
			        <LinearLayout
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_weight="1"
			            android:gravity="center_horizontal" >
				        <ImageView 
				            android:layout_width="60dp"
				            android:layout_height="80dp"
				            android:layout_gravity="center_vertical"
				            android:src="@drawable/add_btn_green"/>
			        </LinearLayout>
			        <LinearLayout
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_weight="1"
			            android:gravity="center_horizontal" >
				        <ImageView 
				            android:layout_width="60dp"
				            android:layout_height="80dp"
				            android:layout_gravity="center_vertical"
				            android:src="@drawable/add_btn_green"/>
			        </LinearLayout>
			        
			    </LinearLayout>
			 
			 </LinearLayout>
			 
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dp"
		        android:orientation="vertical"
		        android:background="@color/color_std_white">
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="联系方式"
		            android:layout_marginLeft="10dp"
		            android:layout_marginTop="10dp"
		            android:textColor="@color/color_call_black"
		            android:textSize="14sp"/>
		        <View
			        android:layout_width="match_parent"
			        android:layout_height="1px"
			        android:layout_marginTop="5dp"
			        android:layout_marginBottom="5dp"
			        android:background="@color/div_line_color" />
		        <RelativeLayout 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:paddingTop="15dp"
		            android:paddingBottom="15dp"
		            android:paddingLeft="10dp"
		            android:paddingRight="10dp">
		            <TextView 
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textSize="14sp"
		                android:text="手机"/>
		            <EditText 
		                android:id="@+id/my_shop_contact_phone"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentRight="true"
		                android:paddingRight="10dp"
		                android:textSize="14sp"
		                android:inputType="number"
		                android:background="@null"
		                android:hint="请输入"/>
		        </RelativeLayout>
		        <RelativeLayout 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:paddingTop="15dp"
		            android:paddingLeft="10dp"
		            android:paddingRight="10dp"
		            android:paddingBottom="15dp">
		            <TextView 
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textSize="14sp"
		                android:text="QQ"/>
		            <EditText 
		                android:id="@+id/my_shop_contact_QQ"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentRight="true"
		                android:paddingRight="10dp"
		                android:textSize="14sp"
		                android:inputType="number"
		                android:background="@null"
		                android:hint="请输入"/>
		        </RelativeLayout>
		        <RelativeLayout 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:paddingTop="15dp"
		            android:paddingLeft="10dp"
		            android:paddingBottom="15dp"
		            android:visibility="gone">
		            <TextView 
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textSize="14sp"
		                android:text="其他"/>
		        </RelativeLayout>
			 
			 </LinearLayout>
			 <RelativeLayout 
			     android:id="@+id/my_shop_add_order"
			     android:layout_width="match_parent"
			     android:layout_margin="20dp"
			     android:layout_height="50dp"
			     android:background="@drawable/btn_send_bg">
			     <TextView 
			         android:layout_width="wrap_content"
			         android:layout_height="wrap_content"
			         android:layout_centerInParent="true"
			         android:text="保存"
			         android:textSize="16sp"
			         android:textColor="@color/color_std_white"
			         />
			 </RelativeLayout>
		</LinearLayout>
	    
	</ScrollView>
    
 </LinearLayout>

