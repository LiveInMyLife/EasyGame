<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/commen_gray_bg"
    android:orientation="vertical" >
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginRight="@dimen/custom_margin_tiny"
        android:background="@color/grey_line_bg" />
    <RelativeLayout
        android:id="@+id/layout_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_std_item_selector"
        android:minHeight="80dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp" >

        <TextView
            style="@style/Smile.TextView._Black"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_light_grey2"
            android:textSize="16sp"
            android:text="@string/add_avator" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_set_avator"
                style="@style/Smile.ImageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="5dp"
                android:src="@drawable/head" />

            <ImageView
                android:id="@+id/iv_arraw"
                style="@style/Smile.ImageView"
                android:layout_width="20dp"
                android:contentDescription="@string/action_settings"
                android:src="@drawable/register_bottom_arrow" />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="@dimen/custom_margin_tiny"
        android:background="@color/grey_line_bg" />
    <LinearLayout
        android:id="@+id/layout_nick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/bg_std_item_selector"
        android:minHeight="45dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"  >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"   
            android:layout_weight="1"     
            android:layout_gravity="center"  
            android:textColor="@color/text_color_light_grey2"
            android:textSize="16sp"
            android:text="昵称" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"      
            android:layout_gravity="center"
            android:textColor="@color/text_color_light_grey2"
            android:textSize="16sp"
            android:text="不悔陪练" />	 
        <ImageView
               style="@style/Smile.ImageView"
               android:layout_width="20dp"
               android:layout_marginRight="10dp"
               android:contentDescription="@string/action_settings"
               android:src="@drawable/register_bottom_arrow" />       

	</LinearLayout>
	 <!-- <View 
         android:layout_width="match_parent"
         android:layout_height="1px"
         android:background="@color/grey_line_bg"/> -->
     <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:orientation="horizontal"
	        android:background="@drawable/bg_std_item_selector"
	        android:minHeight="45dp"
	        android:layout_marginTop="10dp"
	        android:paddingLeft="15dp"
	        android:paddingTop="10dp"
	        android:paddingBottom="10dp"  >
	
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"   
	            android:layout_weight="1"       
	            android:textColor="@color/text_color_light_grey2"
	            android:textSize="16sp"
	            android:text="实名认证" />	        
	        
	        <ImageView
	            android:layout_width="10dp"
	            android:layout_height="13dp"
	            android:layout_marginRight="@dimen/mine_custom_item_right"
	            android:src="@drawable/arrow_right_grey_icon" />

	</LinearLayout>
	 
	 <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="@dimen/custom_margin_tiny"
        android:background="@color/grey_line_bg" />
    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:orientation="horizontal"
	        android:background="@drawable/bg_std_item_selector"
	        android:minHeight="45dp"
	        android:paddingLeft="15dp"
	        android:paddingTop="10dp"
	        android:paddingBottom="10dp"  >
	
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"   
	            android:layout_weight="1"       
	            android:textColor="@color/text_color_light_grey2"
	            android:textSize="16sp"
	            android:text="我的收藏" />	        
	        
	        <ImageView
	            android:layout_width="10dp"
	            android:layout_height="13dp"
	            android:layout_marginRight="@dimen/mine_custom_item_right"
	            android:src="@drawable/arrow_right_grey_icon" />

	</LinearLayout>
	 <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="@dimen/custom_margin_tiny"
        android:background="@color/grey_line_bg" />
	 
	<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:orientation="horizontal"
	        android:background="@drawable/bg_std_item_selector"
	        android:minHeight="45dp"
	        android:paddingLeft="15dp"
	        android:paddingTop="10dp"
	        android:paddingBottom="10dp"  >
	
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"       
	            android:layout_gravity="center"  
	            android:textColor="@color/text_color_light_grey2"
	            android:textSize="16sp"
	            android:text="我的余额" />
	        <TextView
	            android:id="@+id/tv_cash"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" 
	            android:layout_weight="1"      
	            android:layout_gravity="left|center_vertical"
	            android:layout_marginRight="@dimen/mine_custom_item_right" 
	            android:layout_marginLeft="@dimen/mine_custom_item_right"  
	            android:textColor="@color/text_color_light_grey2"
	            android:textSize="16sp"
	            android:text="¥200.00" />	
	        <TextView
	            android:id="@+id/draw_money"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"      
	            android:layout_gravity="center"
	            android:layout_marginRight="@dimen/mine_custom_item_right"  
	            android:paddingLeft="5dp"
	            android:paddingRight="5dp"
	            android:paddingTop="3dp"
	            android:paddingBottom="3dp"
	            android:textColor="@color/text_color_white"
	            android:textSize="16sp"
	            android:background="@drawable/btn_send_bg"
	            android:text="提款" />	        

	</LinearLayout>
	<!-- <View 
         android:layout_width="match_parent"
         android:layout_height="1px"
         android:background="@color/grey_line_bg"/> -->
	 <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:orientation="horizontal"
	        android:background="@drawable/bg_std_item_selector"
	        android:minHeight="45dp"
	        android:layout_marginTop="10dp"
	        android:paddingLeft="15dp"
	        android:paddingTop="10dp"
	        android:paddingBottom="10dp"  >
	
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"   
	            android:layout_weight="1"       
	            android:textColor="@color/text_color_light_grey2"
	            android:textSize="16sp"
	            android:text="意见反馈" />	        
	        
	        <ImageView
	            android:layout_width="10dp"
	            android:layout_height="13dp"
	            android:layout_marginRight="@dimen/mine_custom_item_right"
	            android:src="@drawable/arrow_right_grey_icon" />

	</LinearLayout>
	
	 <LinearLayout
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:orientation="horizontal"
	     android:background="@drawable/bg_std_item_selector"
	     android:minHeight="45dp"
	     android:layout_marginTop="10dp"
	     android:gravity="center"  >
	
	     <TextView
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"   
			 android:layout_gravity="center"    
	         android:textSize="15sp"
	         android:textColor="@color/text_color_red"
	         android:text="退出当前账号" />	        
	</LinearLayout>

</LinearLayout>