<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_std_item_selector"
    android:padding="@dimen/custom_margin_tiny"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
         >

       <ImageView
           android:id="@+id/my_shop_order_img"
           android:layout_width="@dimen/item_img_weight"
           android:layout_height="@dimen/item_img_height"
           android:layout_gravity = "left|top"           
           android:background="@drawable/lol"
       />
       <RelativeLayout 
           android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:layout_toRightOf="@id/my_shop_order_img" >
	       <TextView
	           android:id="@+id/my_shop_order_ordername"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"	           
	           android:singleLine="true"
	           android:layout_marginLeft="@dimen/custom_margin_tiny"
	           android:textSize="@dimen/custom_text_size_very_medium"
	           android:text="黄金大神陪练"
	           />
	       
	       <TextView
	           android:id="@+id/my_shop_order_price"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_below="@id/my_shop_order_ordername"
	           android:singleLine="true"
	           android:layout_marginLeft="@dimen/custom_margin_tiny"
	           android:layout_marginTop="@dimen/custom_margin_wee"
	           android:layout_alignBottom="@id/sparing_list_item_score"
	           android:textSize="@dimen/custom_text_size_small"
	           android:textColor="@color/text_color_red"
	           android:text="25元/小时"
	           />
	       <TextView
	           android:id="@+id/my_shop_order_sellnum"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_toRightOf="@id/my_shop_order_price"
	           android:layout_alignBottom="@id/my_shop_order_price"
	           android:singleLine="true"
	           android:gravity="bottom|left"
	           android:paddingLeft="20dp"
	           android:textSize="@dimen/custom_text_size_mini"
	           android:text="月售100单"
	           />
	        
       </RelativeLayout>
       

        
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/div_line_color" />
    <TextView 
        android:id="@+id/order_list_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/custom_text_size_mini"
        android:text="电信区均衡教派钻三，脾气好声音柔和，每晚8：00到23：00接单，欢迎体验"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/div_line_color" />

</LinearLayout>
