<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   		xmlns:ntesci="http://schemas.android.com/apk/res/com.netease.ntesci"
        android:layout_width="match_parent"
        android:layout_height="240dp"      
        android:background="@drawable/usercenter_background" >
        
        <RelativeLayout
	        android:id="@+id/rl_actionbar"
	        android:layout_width="match_parent"
	        android:layout_height="48dp"
	        android:paddingBottom="1dp" >

	        <ImageView
	            android:id="@+id/iv_back"
	            android:layout_width="12dp"
	            android:layout_height="23dp"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="@dimen/custom_margin_very_tiny"
	            android:scaleType="center"
	            android:src="@drawable/actionbar_back_normal"
	            android:visibility="gone" />
	
	        <TextView
	            android:id="@+id/tv_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:singleLine="true"
	            android:text="店铺设置"
	            android:textColor="@color/actionbar_title_color"
	            android:textSize="@dimen/custom_text_size_large"
	            android:visibility="gone" />                
	        
    	</RelativeLayout>

	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
       
        
        <RelativeLayout 
            android:id="@+id/rl_head"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"           
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
           
            
            <LinearLayout
                android:id="@+id/car_and_order"
	            android:layout_width="match_parent"
	            android:layout_height="50dp"
                android:layout_alignParentBottom="true"
	            android:layout_centerHorizontal="true"
	            android:gravity="center"
	            android:visibility="visible">
	            
				<LinearLayout 
				    android:id="@+id/layout_mycar"
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:layout_weight="1"
				    android:gravity="center"
				    android:orientation="horizontal">
	                
	                <TextView
	                    android:id="@+id/tv_mycar"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:clickable="true"
	                    android:layout_marginLeft="5dp"
	                    android:text="我的爱车"
	                    android:textColor="@color/text_color_white"
	                    android:textSize="@dimen/custom_text_size_very_medium" />
                </LinearLayout>

	            <View
	                android:layout_width="1px"
	                android:layout_height="26dp"
	                android:alpha="150"
	                android:background="@color/color_std_white_light"/>
	            <LinearLayout 
				    android:id="@+id/layout_myorder"
				    android:layout_width="match_parent"
				    android:layout_height="match_parent" 
				    android:layout_weight="1"
				    android:gravity="center"
				    android:orientation="horizontal">
		            <TextView 
		                android:id="@+id/tv_myorder"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginLeft="5dp"       
		                android:text="我的订单"
		                android:textSize="@dimen/custom_text_size_very_medium"
		            	android:textColor="@color/text_color_white"/>
	            </LinearLayout>
	        </LinearLayout>
	        <View
	                android:layout_width="match_parent"
	                android:layout_height="1px"
	                android:layout_marginLeft="15dp"
	                android:layout_marginRight="15dp"
	                android:layout_above="@id/car_and_order"
	                android:background="@color/color_std_white_light"/>

	        <TextView
	            android:id="@+id/tv_account"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
                android:layout_above="@id/car_and_order"  
	            android:layout_centerHorizontal="true"   
	            android:layout_marginBottom="15dp"  
	            android:text="立即支付"
	            android:textSize="16sp"
	            android:textColor="@color/text_color_white"
	            />
	        <RelativeLayout
	            android:id="@+id/frame_img_head"
	            android:layout_width="50dp"
	            android:layout_height="50dp"
	            android:layout_centerHorizontal="true"	            
	            android:layout_above="@id/tv_account"
	            android:layout_marginBottom="10dp"
	            android:background="@drawable/mine_head_bg" >

	            <ImageView
	                android:id="@+id/img_head"
	                android:layout_width="@dimen/mine_head"
	                android:layout_height="@dimen/mine_head"
	                android:layout_centerInParent="true"
	                android:src="@drawable/mine_head_default"/>

	        </RelativeLayout>
	        <!--android:layout_alignParentTop="true"
	        android:layout_marginTop="@dimen/mine_head_top"  -->
	         

        </RelativeLayout>
        
        
        
        
        
        
        
    </RelativeLayout>
    </RelativeLayout>

