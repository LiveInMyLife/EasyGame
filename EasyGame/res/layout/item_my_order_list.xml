    <TextView 
           android:id="@+id/item_myorder_description"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="@dimen/custom_margin_tiny"
           android:layout_marginTop="5dp"
           android:textSize="@dimen/custom_text_size_very_small"
           android:textColor="@color/text_color_black"
           android:text="RNG打SKT结果那边胜？"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	    <TextView 
	           android:id="@+id/item_myorder_selection_title"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_marginLeft="@dimen/custom_margin_tiny"
	           android:layout_marginTop="5dp"
	           android:textSize="@dimen/custom_text_size_very_small"
	           android:textColor="@color/text_color_black"
	           android:text="我的选择:"/>
	    <TextView 
	           android:id="@+id/item_myorder_selection"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_marginLeft="@dimen/custom_margin_tiny"
	           android:layout_marginTop="5dp"
	           android:textSize="@dimen/custom_text_size_very_small"
	           android:textColor="@color/text_color_black"
	           android:text="RNG"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="@dimen/custom_margin_tiny"
        android:layout_marginRight="@dimen/custom_margin_tiny"
        android:background="@color/grey_line_bg" />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
       <TextView 
           android:id="@+id/item_myorder_total"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="match_parent"
           android:layout_marginLeft="@dimen/custom_margin_tiny"
           android:gravity="left|center_vertical"
           android:text="总计:1000豆"
           android:textColor="@color/text_color_red"/> 
       <TextView 
           android:id="@+id/item_myorder_complaint"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:layout_marginLeft="@dimen/custom_margin_tiny"
           android:paddingLeft="20dp"
           android:paddingRight="20dp"
           android:gravity="center"
           android:text="投诉"
           android:textColor="@color/text_color_white"
           android:background="@color/text_color_red"
           android:visibility="gone"/>
       <TextView 
           android:id="@+id/item_myorder_suggestion"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:paddingLeft="20dp"
           android:paddingRight="20dp"
           android:gravity="center"
           android:text="评价"
           android:textColor="@color/text_color_white"
           android:background="@color/color_std_blue"
           android:visibility="gone"/>
       
       <TextView 
           android:id="@+id/item_myorder_contact_server"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:layout_marginLeft="@dimen/custom_margin_tiny"
           android:paddingLeft="10dp"
           android:paddingRight="10dp"
           android:gravity="center"
           android:text="举报作弊"
           android:textColor="@color/text_color_white"
           android:background="@drawable/selector_bg_red_btn"
		/>
